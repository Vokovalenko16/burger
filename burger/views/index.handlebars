<h1>Eat-Da-Burger</h1>

<div class = "img-burger">
<img src = "http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png"> 
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Action?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour it Now!<br>
    <input type="radio" name="devoured" value="0"> Devour it Later!
  </div>

  <button type="submit">Submit!</button>
</form>


<ul class = "Devoured">
  {{#each burr}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>


<ul class = "non-Devoured">
  {{#each burr}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
